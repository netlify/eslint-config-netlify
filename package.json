{
  "name": "eslint-config-netlify",
  "version": "0.1.2",
  "description": "ESLint rules for Netlify JavaScript projects",
  "main": "index.js",
  "scripts": {
    "test": "npm run lint",
    "lint": "eslint .",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": "jsonlint"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/netlify/eslint-config-netlify.git"
  },
  "author": "Netlify Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/netlify/eslint-config-netlify/issues"
  },
  "homepage": "https://github.com/netlify/eslint-config-netlify#readme",
  "dependencies": {
    "babel-eslint": "^7.0.0",
    "eslint": "^3.9.1",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-import-resolver-webpack": "^0.6.0",
    "eslint-plugin-class-property": "^1.0.1",
    "eslint-plugin-import": "^1.16.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.5.0"
  },
  "peerDependencies": {
    "eslint": "3.x",
    "webpack": "^1.11.0 || ^2.1.0-beta || ^2.1.0"
  },
  "devDependencies": {
    "cz-conventional-changelog": "^1.2.0",
    "husky": "^0.11.9",
    "jsonlint": "^1.6.2",
    "lint-staged": "^3.2.0",
    "semantic-release": "^4.3.5",
    "webpack": "^1.13.3"
  },
  "eslintConfig": {
    "extends": "./index.js"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
